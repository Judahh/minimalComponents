{
  "compilerOptions": {
    "resolveJsonModule": true,
    "target": "es2022",
    "module": "commonjs",
    "lib": [
      "dom",
      "dom.iterable",
      "es2022"
    ],
    "allowJs": true,
    "jsx": "react",
    "declaration": true,
    "declarationMap": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "suppressImplicitAnyIndexErrors": true,
    "outDir": "./dist",
    "removeComments": false,
    "noEmit": false,
    "isolatedModules": true,
    "strict": true,
    "noImplicitAny": false,
    "alwaysStrict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": false,
    "moduleResolution": "node",
    "typeRoots": [
      "./types",
      "../node_modules/@types",
      "node_modules/@types"
    ],
    "types": [
      "node",
      "cypress"
    ],
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "forceConsistentCasingInFileNames": true,
    "incremental": true
  },
  "include": [
    "src",
    "source",
  ],
  "exclude": [
    "**/node_modules",
    "node_modules",
    ".next",
    "test",
    "cypress",
    "**/*.spec.ts",
    "**/*.test.ts",
    "dist"
  ]
}
